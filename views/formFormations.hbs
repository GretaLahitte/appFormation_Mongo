<h1>{{title}}</h1>
<form class="form" method="POST" action="{{form_action}}" id="formAddFormation">
   <input type="hidden" name="id" value="{{formations._id}}" />
   <div class="form-group">
     <label for="libelleField">libelle :</label>
     <input type="text" class="form-control" id="libelleField" placeholder="le libellé" name="libelle" value="{{formations.libelle}}" />
    </div><br/>
    duree : <input type="text" name="duree" value="{{formations.duree}}" /><br/>
    plan_cours : <input type="text" name="plan_cours" value="{{formations.plan_cours}}" /><br/>
    prix : <input type="text" name="prix" value="{{formations.prix}}" /><br/>
    formateurs :<br>
    {{#each formateurs}}
      <input type="checkbox" name="formateurs" value={{this.id}}>{{this.nom}} {{this.prenom}} <br>
    {{/each}}
    <br/>

    <input type="submit" value="Confirmer la {{libelle}}" />
</form>
<!­­ Script de validation du formulaire de modification ­­>
<script>
    var form = document.getElementById('formAddFormation');
    form.addEventListener('submit', function(evt) {
        form.action += "/{{formations._id}}";
        form.submit();
    });
</script>

